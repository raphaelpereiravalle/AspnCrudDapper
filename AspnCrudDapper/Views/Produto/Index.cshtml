@model List<AspnCrudDapper.Entities.Produto>
@{
    ViewData["Title"] = "Index";
}

<div class="main-container">
    <div class="row">
        <main role="main" class="col-md-12 ml-sm-auto col-lg-12 px-12">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                <h1 class="h2">Produtos</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group mr-2">
                        <input class="btn btn-sm btn-outline-secondary" id="btnCadastroProduto" title="Cadastro de Produto" value="Adicionar Novo Produto" onclick="modal(0, null);">
                        <i class="flaticon2-plus"></i>
                       
                    </div>
                </div>
            </div>
            <div class="idGridProduto">
                <table class="table table-striped" id="dtProduto">
                    <thead>
                        <tr>
                            <th class="text-left">Código</th>
                            <th>Nome</th>
                            <th class="text-center">Estoque</th>
                            <th class="text-center">Preco</th>
                            <th class="text-center" style="width: 20px;">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="text-left">@item.CodProduto</td>
                                    <td>@item.Nome</td>
                                    <td class="text-center"><span class="badge badge-success rounded-pill">@item.Estoque</span></td>
                                    <td class="text-center">@item.Preco</td>
                                    <td class="text-center">
                                        <div class="btn-group">
                                            <button type="submit" class="btn btn-sm btn-primary" title="Editar" id="btnEditarProduto"  name="btnEditarProduto" onclick="modal(0, '@item.ProdutoId');">
                                                <i class="fa fa-fw fa-pencil-alt"></i>
                                            </button>
                                            <button type="submit" class="btn btn-sm btn-danger" title="Excluir" id="btnExcluirProduto" name="btnExcluirProduto" onclick="modal(1, '@item.ProdutoId');">
                                                <i class="fa fa-fw fa-times"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>

<!-- Top Modal Incluir/Editar/Excluir-->
<div class="modal fade" id="modal-produto" tabindex="-1" role="dialog" aria-labelledby="modal-block-small" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div id="modalProduto"></div>
    </div>
</div>
<!-- End Top Modal -->

@section Scripts{
    <script src="~/js/produto.js" asp-append-version="true"></script>
}

